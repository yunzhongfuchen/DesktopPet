/*滑动槽的部分*/
QSlider#play_slide:groove:horizontal,QSlider#volume_Slider:groove:horizontal
{
    background-color: rgb(0,255,0);
    height: 4px;
}

/*已滑过的槽部分*/
QSlider#play_slide:sub-page:horizontal,QSlider#volume_Slider:sub-page:horizontal
{
    background-color: red;
    height: 4px;
}
/*未滑过的槽部分*/
QSlider#play_slide:add-page:horizontal,QSlider#volume_Slider:add-page:horizontal
{
    background-color: rgb(205,205,205);
    height: 4px;
}
/*滑块*/
QSlider#play_slide:handle:horizontal,QSlider#volume_Slider:handle:horizontal
{
    height: 4px;
    width: 4px;
    border-image: url(:/images/playWidget/point_music.png);
}

